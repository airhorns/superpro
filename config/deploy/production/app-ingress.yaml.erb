---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: app-ingress
  annotations:
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/client-body-buffer-size: 2M
    nginx.ingress.kubernetes.io/proxy-body-size: 10M
spec:
  tls:
    - secretName: gapp.fun-production
      hosts:
        - app.gapp.fun
  rules:
    - host: app.gapp.fun
      http:
        paths:
          - backend:
              serviceName: web
              servicePort: 80
