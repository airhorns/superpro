apiVersion: certmanager.k8s.io/v1alpha1
kind: Certificate
metadata:
  name: gapp.fun-production
spec:
  secretName: gapp.fun-production
  issuerRef:
    name: letsencrypt-production
    kind: ClusterIssuer
  dnsNames:
