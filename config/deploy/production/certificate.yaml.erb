---
apiVersion: certmanager.k8s.io/v1alpha1
kind: Certificate
metadata:
  name: superpro.io-production
spec:
  secretName: superpro.io-production
  issuerRef:
    name: letsencrypt-production
    kind: ClusterIssuer
  dnsNames:
    - "app.superpro.io"
  acme:
    config:
      - dns01:
          provider: gke-clouddns
        domains:
          - "app.superpro.io"
