---
apiVersion: certmanager.k8s.io/v1alpha1
kind: Certificate
metadata:
  name: flurish.dev-production
spec:
  secretName: flurish.dev-production
  issuerRef:
    name: letsencrypt-production
    kind: ClusterIssuer
  dnsNames:
    - "app.flurish.dev"
  acme:
    config:
      - dns01:
          provider: flurish-clouddns
        domains:
          - "app.flurish.dev"
