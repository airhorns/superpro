---
apiVersion: certmanager.k8s.io/v1alpha1
kind: Certificate
metadata:
  name: fluri.sh-production
spec:
  secretName: fluri.sh-production
  issuerRef:
    name: letsencrypt-production
    kind: ClusterIssuer
  dnsNames:
    - "app.fluri.sh"
  acme:
    config:
      - dns01:
          provider: gke-clouddns
        domains:
          - "app.fluri.sh"
