---
apiVersion: v1
kind: Service
metadata:
  labels:
    service: web
  name: web
spec:
  ports:
    - name: http
      protocol: TCP
      port: 80
      targetPort: 3000
  selector:
    service: web
  type: NodePort
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  labels:
    service: web
  name: web
spec:
  replicas: 3
  template:
    metadata:
      creationTimestamp: null
      labels:
        service: web
    spec:
      containers:
        - name: web
          args:
            - bundle
            - exec
            - rails
            - s
            - -p
            - "3000"
            - -b
            - 0.0.0.0
          env: <%= partial 'rails_environment' %>
          image: gcr.io/flurish-core-production/core:<%= current_sha %>
          ports:
            - containerPort: 3000
          resources: {}
          securityContext:
            capabilities:
              add:
                - SYS_PTRACE
          readinessProbe:
            httpGet:
              path: /health_check
              port: 3000
            periodSeconds: 1
            timeoutSeconds: 1
            successThreshold: 1
            failureThreshold: 10
      restartPolicy: Always
