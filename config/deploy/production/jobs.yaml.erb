apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  labels:
    service: jobs
  name: jobs
spec:
  replicas: 2
  strategy: {}
  template:
    metadata:
      creationTimestamp: null
      labels:
        service: jobs
    spec:
      containers:
        - name: jobs
          image: "gcr.io/superpro-production/core:<%= current_sha %>"
          args:
            - bundle
            - exec
            - que
            - -q
            - default
            - -q
            - mailers
          env: <%= partial 'rails_environment' %>
          resources: {}
          securityContext:
            capabilities:
              add:
                - SYS_PTRACE
      restartPolicy: Always
