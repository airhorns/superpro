apiVersion: v1
kind: Pod
metadata:
  name: upload-assets-<%= deployment_id %>
spec:
  containers:
    - name: upload-assets
      args:
        - bundle
        - exec
        - rake
        - assets:sync
      env: <%= partial 'rails_environment' %>
      volumeMounts: <%= partial 'rails_volume_mounts' %>
      image: gcr.io/superpro-production/core:<%= current_sha %>
      resources: {}
  volumes: <%= partial 'rails_volumes' %>
  restartPolicy: Never
